<% @posts.each do |x| %>
  <br>
  <div class="span3 well center-block" style="width: 350px">
	<%= image_tag x.image.url(:medium) %>
	<br>
	<%= x.description %>
	<br>
	<button type="button" class="btn btn-info btn-sm">
		<%= link_to "Delete Post", post_path(x), method: :delete, data: { confirm: "Delete?"} %>
	</button>
  </div>
  <br>
<% end %>